<h1>
  <%= "後臺任務數量" %>： <%= "使用者列表" %>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td><%= "使用者名稱" %></td>
      <td><%= "電子信箱" %></td>
      <td><%= "角色" %></td>
      <td><%= "任務數量" %></td>
      <td><%= "操作" %></td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.user_name, task_admin_user_path(user) %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user_role(user.admin) %>
        <td>
          <%= user.tasks.count %>
        </td>
        <%# 顯示使用者的任務數量 %>
          <td>
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "編輯", edit_admin_user_path(user) , class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to "查看", admin_user_path(user) , class: 'dropdown-item' %>
                  <div class="dropdown-divider"></div>
                  <%= link_to t"刪除", admin_user_path(user) , class: 'dropdown-item' , method: 'delete' ,
                    data: { confirm: "確認刪除嗎？" }%>
            </div>
          </td>
      </tr>
      <% end %>

  </tbody>
</table>

<%= button_to t("users.create"), admin_sign_up_path ,class:"btn btn-outline-dark", method: "get" %>