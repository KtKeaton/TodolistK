<%= search_form_for @query do |f| %>
  <%= f.label :name, "Search for" %>
  <%= f.search_field :name_cont, placeholder: "Mission Name" %>
  <%= f.submit %>
<% end %>

<h1><%= t('task_list') %></h1>
<table>
  <thead>
    <tr>
      <th><%= sort_link(@query, t('task_name')) %></th>
      <th><%= t('task_status') %></th>
      <th><%= t('task_priority') %></th>
      <th><%= t('task_created') %></th>
      <th><%= t('task_ends') %></th>
      <th><%= t('task_actions') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>


    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= task.name %>
          </td> 
          <td>
            <%= t("checkpoint_status.#{task.status}") %>
          </td>
          <td>
            <%= t("checkpoint_priority.#{task.priority}") %>
          </td>
          <td>
            <%= task.created_at.strftime("%b %d %R") %>
          </td>
          <td>
            <%= task.due_date.strftime("%b %d %R") %>
          </td>
          <td>
            <%= link_to t('task_cont') , task_path(task) %>
          </td>
          <td>
            <%= link_to t('task_do_edit') , edit_task_path(task) %>
          </td>
            <td>
              <%= link_to t('task_do_kill') , task_path(task), method: :delete, data:{ confirm: t('task_do_sure') } %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <%= link_to t('task_do_add') , new_task_path %>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>