<%= render "shared/navbar" %>
  <div class="container">
    <div>
      <%= form_tag search_tasks_path, :method=> 'get' do %>
        <p>
          <%= text_field_tag :name, params[:name] %>
            <%= submit_tag "Search" , :name=> nil %>
        </p>
        <% end %>
    </div>

    <p class="lead">
      <%= t('task_list') %>
    </p>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">
            <%= t('task_name') %>
          </th>
          <th scope="col">
            <%= t('task_status') %>
          </th>
          <th scope="col">
            <%= t('task_priority') %>
          </th>
          <th scope="col">
            <%= t('task_created') %>
          </th>
          <th scope="col">
            <%= t('task_ends') %>
          </th>
          <th scope="col">
            <%= t('task_actions') %>
          </th>
          <th colspan="2"></th>
          <th scope="col">
            <%= t('task_tag') %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <th scope="row">
              <%= task.id %>
            </th>
            <td>
              <%= task.name %>
            </td>
            <td>
              <%= t("checkpoint_status.#{task.status}") %>
            </td>
            <td>
              <%= t("checkpoint_priority.#{task.priority}") %>
            </td>
            <td>
              <%= task.created_at.strftime("%b %d %R") %>
            </td>
            <td>
              <%= task.due_date.strftime("%b %d %R") %>
            </td>
            <td>
              <%= link_to t('task_cont') , task_path(task) %>
            </td>
            <td>
              <%= link_to t('task_do_edit') , edit_task_path(task) %>
            </td>
            <td>
              <%= link_to t('task_do_kill') , task_path(task), method: :delete, data:{ confirm: t('task_do_sure') } %>
            </td>
            <td>
              <%= task.tag_list %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

    <%= link_to t('task_do_add') , new_task_path %>

      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
  </div>