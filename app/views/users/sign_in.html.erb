<div class="container-fluid">
  <div class="row-sign">
    <div class="col">
          <div class="col col-sm-5"><%= image_tag 'logo_s.fw.png' %></div>
          <div class="col col-sm-5">
          <p class="lead">
            <%= t('user_login') %>
          </p>
      
      </div>
      <div class="col">
        <%= form_for(@user, url: login_path) do |f| %>
          <div class="mb-3">
            <label for="" class="form-label"><%= f.label t('user_email') %></label><br>
              <%= f.email_field :email %>
          </div>
          <div class="mb-3">
            <label for="" class="form-label"><%= f.label t('user_pw') %></label><br>
              <%= f.password_field :password %>
          </div>
          <%= f.submit "Login" %>
        <% end %>
        <p>
          <%= link_to t('nav_signup') , sign_up_users_path %> |
          <%= link_to "中文版" , :controller=> controller_name, :action => action_name, :locale => "zh-TW" %> |
          <%= link_to "English" , :controller=> controller_name, :action => action_name, :locale => "en" %>
    </div>
  </div>
</div>